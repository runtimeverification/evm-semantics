set -euxo pipefail
export PATH=$(pwd)/.build/usr/bin:$PATH
export PATH=$(pwd)/../hs-backend-booster/.build/kore/bin:$PATH

poetry_run() {
    poetry -C ./kevm-pyk -- run "$@"
}

# you made changes to KEVM and want to restart
forge_build() {
    rm -rf ${foundry_out}
    (   cd $(dirname ${foundry_out})
        forge build
    )
}

kompile_foundry() {
    poetry_run kevm kompile --backend foundry             \
        .build/usr/lib/kevm/include/kframework/foundry.md \
        --main-module FOUNDRY                             \
        --syntax-module FOUNDRY                           \
        --pyk --verbose --profile
}

foundry_kompile() {
    poetry_run kevm foundry-kompile ${verbose} ${foundry_out} "$@"
}

foundry_prove() {
    poetry_run kevm foundry-prove ${verbose} ${foundry_out} --test ${test} "$@"
}

foundry_show() {
    poetry_run kevm foundry-show ${verbose} ${foundry_out} ${test} "$@"
}

foundry_to_dot() {
    poetry_run kevm foundry-to-dot ${verbose} ${foundry_out} ${test} "$@"
}

foundry_view() {
    poetry_run kevm foundry-view-kcfg ${verbose} ${foundry_out} ${test} "$@"
}

foundry_list() {
    poetry_run kevm foundry-list ${verbose} ${foundry_out}
}

foundry_remove_node() {
    node_id="$1" ; shift
    poetry_run kevm foundry-remove-node ${verbose} ${foundry_out} ${test} ${node_id} "$@"
}

foundry_simplify_node() {
    node_id="$1" ; shift
    poetry_run kevm foundry-simplify-node ${verbose} ${foundry_out} ${test} ${node_id} "$@"
}

foundry_step_node() {
    node_id="$1" ; shift
    poetry_run kevm foundry-step-node ${verbose} ${foundry_out} ${test} ${node_id} "$@"
}

foundry_section_edge() {
    edge_id="$1" ; shift
    poetry_run kevm foundry-section-edge ${verbose} ${foundry_out} ${test} ${edge_id} "$@"
}

do_kompile() {
    poetry_run kevm kompile --pyk --backend haskell ${verification_file} --definition ${definition} \
        --main-module VERIFICATION --syntax-module VERIFICATION
}

do_prove() {
    poetry_run kevm prove ${spec_file} --definition ${definition} --pyk ${verbose} --save-directory ${kcfgs_dir}
}

do_view() {
    poetry_run kevm view-kcfg ${verbose} ${kcfgs_dir} ${spec_file} --definition ${definition}
}


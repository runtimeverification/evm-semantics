      [priority(20), label(BASIC-BLOCK-21-TO-20)]
    
    rule [BASIC-BLOCK-22-TO-15]: <kevm>
           <k>
             ( #next [ ADD ] ~> .K => .K )
             ~> K_CELL:K
           </k>
           <useGas>
             ( USEGAS_CELL:Bool => false )
           </useGas>
